{% extends 'base.html.twig' %}

{% block title %}Espace Administrateur - Ajouter un film | Filmoth√®que{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('add_film') }}
{% endblock %} 

{% block body %}
    <h1 class="text-center">Ajouter un film</h1>
    
    <div class="containers">
        {% for film in films %}
            <div class="film">
                <a href="{{path('film_added', {'idApi': film.idApi})}}" class="item">
                    <div class="img">
                        <img src="https://www.themoviedb.org/t/p/w440_and_h660_face/{{film.pictures}}"/>
                        <div class="align">
                            <h2>{{film.title}}</h2>
                            <p>{{film.summary}}</p>
                            <i class="fas fa-folder-plus"></i>
                        </div>
                    </div>
                </a>
            </div>
        {% endfor %}
    </div>



    {% block javascripts %}
        {{ parent() }}
        {{ encore_entry_script_tags('add_film') }}
    {% endblock %}

{% endblock %}