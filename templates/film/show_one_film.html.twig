{% extends 'base.html.twig' %}

{% block title %}Voir un film | Filmothèque{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('film_show_one') }}
{% endblock %} 

{% block body %}
    {% include "./components/_second_nav.html.twig" %}
    <div id="search"></div>
    
    <!-- Bootstrap Static Header -->
    <div class="filmHeader bg-cover text-white" style="background: linear-gradient(180deg, #000000 0%, #000000 22.4%, rgba(0, 0, 0, 0.08) 85.94%, rgba(0, 0, 0, 0) 100%), url('https://www.themoviedb.org/t/p/w1920_and_h800_multi_faces/{{film.pictures}}')">
        <div class="container py-5 d-flex infoFilm">
            
            <img src="https://www.themoviedb.org/t/p/w440_and_h660_face/{{film.pictures}}" class="miniImg px-4">
            
            <div class="d-flex flex-column">
                <h3>{{film.title}}</h3>
                <h5>Sortie le : {{ film.releasedAt|date('d.m.Y') }}</h5>
                <div class="d-flex">
                    <p>{{film.duration}} minutes</p>
                    <p class="px-4">{{film.country}}</p>
                    <p>Fantastique</p>
                </div>
            </div>

        </div>

        <a href="#" class="text-white linkPlay"><i class="fas fa-eye"></i> Regarder la bande annonce</a>
        <a href="" class="shop">Réserver</a>
    </div>

    <!-- Bande d'information du film -->
    <div class="d-flex mainDivInfo">
        <div class="d-flex flex-column leftDivInfo">
            <div class="d-flex justify-content-between leftDivLinks">
                <button>Synopsis</button>
                <button>Equipe technique</button>
                <button>Détails</button>
            </div>
            <p id="filmContent"> {{film.summary}}</p>
        </div>
        <div class="trait"></div>
        <div class="d-flex flex-column rightDivInfo">
            <h6>Thèmes</h6>
            <div class="d-flex justify-content-between genreWords">
                <p>Extraterrestres</p>
                <p>Amour</p>
                <p>Science-Fiction</p>
                <p>Dystopie</p>
                <p>Bataille</p>
            </div>
        </div>
    </div>


    {% block javascripts %}
        {{ parent() }}
        {{ encore_entry_script_tags('film_show_one') }}
    {% endblock %}
{% endblock %}
