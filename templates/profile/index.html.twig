{% extends 'base.html.twig' %}

{% block title %}Votre profil | Filmothèque{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('profile') }}
{% endblock %} 

{% block body %}
    {% include "./components/_second_nav.html.twig" %}

    <section style="background-color: #003333;" class="mySection">
        <div class="container myContainer">
            <div class="flex-column justify-content-center">
                
                <div class="col-lg-4 mx-auto">
                    <div class="card mb-4">
                        <div class="card-body text-center">
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp" alt="avatar" class="rounded-circle img-fluid" style="width: 150px;">
                            <h5 class="my-3">{{app.user.firstName}} {{app.user.lastName}}</h5>
                            <p class="text-muted mb-4">Statut: utilisateur</p>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6  mx-auto">
                    <div class="card mb-4">
                        <div class="card-body">
                            <h2 class="text-center pt-2 pb-3">Vos informations</h2>
                            
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Prénom</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">{{app.user.firstName}}</p>
                                </div>
                            </div>

                            <hr>

                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Nom</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">{{app.user.lastName}}</p>
                                </div>
                            </div>

                            <hr>

                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Email</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">{{app.user.email}}</p>
                                </div>
                            </div>

                            <hr>

                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Mot de passe</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">*************</p>
                                </div>
                            </div>
        
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    {% block javascripts %}
        {{ parent() }}
        {{ encore_entry_link_tags('profile') }}
    {% endblock %} 
{% endblock %}
